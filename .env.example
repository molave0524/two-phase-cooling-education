# Two-Phase Cooling Education Center Environment Variables
# Copy this file to .env.local for development

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL database connection
# Format: postgresql://[user[:password]@][netloc][:port][/dbname][?param1=value1&...]
DATABASE_URL="postgresql://postgres:password@localhost:5432/twophase_education_dev"

# Database connection pool settings (optional)
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ============================================================================
# NEXT.JS CONFIGURATION
# ============================================================================

# Application URL (used for absolute URLs, redirects, etc.)
NEXTAUTH_URL="http://localhost:3000"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Secret for NextAuth.js session encryption
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-here"

# Development/Production environment
NODE_ENV="development"

# ============================================================================
# AI SERVICE CONFIGURATION
# ============================================================================

# OpenAI API configuration
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_ORGANIZATION_ID="org-your-organization-id"

# AI service settings
AI_MODEL="gpt-4"
AI_MAX_TOKENS=1500
AI_TEMPERATURE=0.7

# Circuit breaker configuration
AI_CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
AI_CIRCUIT_BREAKER_TIMEOUT_MS=30000
AI_CIRCUIT_BREAKER_RESET_TIMEOUT_MS=60000

# ============================================================================
# AWS SERVICES CONFIGURATION
# ============================================================================

# AWS credentials (for CloudFront, S3, CloudWatch)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"

# CloudFront CDN configuration
CDN_BASE_URL="https://d123456789.cloudfront.net"
CDN_DISTRIBUTION_ID="E123456789ABCD"

# S3 bucket for video storage
S3_BUCKET_NAME="twophase-education-videos"
S3_BUCKET_REGION="us-east-1"

# CloudWatch monitoring
CLOUDWATCH_NAMESPACE="TwoPhaseCooling/Education"

# ============================================================================
# STRIPE PAYMENT CONFIGURATION
# ============================================================================

# Stripe keys (test environment)
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"

# Stripe webhook endpoint secret
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# Product configuration
STRIPE_PRICE_ID="price_your-product-price-id"

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================

# SMTP configuration for transactional emails
SMTP_HOST="smtp.resend.com"
SMTP_PORT=587
SMTP_USERNAME="resend"
SMTP_PASSWORD="your-resend-api-key"
SMTP_FROM_EMAIL="noreply@twophasecooling.com"
SMTP_FROM_NAME="Two-Phase Cooling Education"

# ============================================================================
# MONITORING AND ALERTING
# ============================================================================

# Performance monitoring
NEXT_PUBLIC_ENABLE_MONITORING="true"
MONITORING_INTERVAL_MS=30000

# Slack notifications
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"

# Error tracking (optional - Sentry)
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
SENTRY_ENVIRONMENT="development"

# ============================================================================
# ANALYTICS AND TRACKING
# ============================================================================

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Google Tag Manager (optional)
NEXT_PUBLIC_GTM_ID="GTM-XXXXXXX"

# Facebook Pixel (optional)
NEXT_PUBLIC_FACEBOOK_PIXEL_ID="123456789012345"

# ============================================================================
# SEO AND VERIFICATION
# ============================================================================

# Search engine verification codes
GOOGLE_VERIFICATION_CODE="your-google-verification-code"
YANDEX_VERIFICATION_CODE="your-yandex-verification-code"
YAHOO_VERIFICATION_CODE="your-yahoo-verification-code"

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# JWT secret for API authentication
JWT_SECRET="your-jwt-secret-here"

# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # requests per window

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS="http://localhost:3000,https://twophasecooling.com"

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable/disable features for development
NEXT_PUBLIC_ENABLE_AI_ASSISTANT="true"
NEXT_PUBLIC_ENABLE_ECOMMERCE="true"
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_VIDEO_STREAMING="true"

# Beta features
NEXT_PUBLIC_ENABLE_ADVANCED_METRICS="false"
NEXT_PUBLIC_ENABLE_SOCIAL_FEATURES="false"

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================

# Prisma Studio (database GUI)
PRISMA_STUDIO_PORT=5555

# Development proxy settings (if needed)
HTTP_PROXY=""
HTTPS_PROXY=""

# Debug logging
DEBUG="prisma:*"
LOG_LEVEL="info"

# ============================================================================
# CONTENT CONFIGURATION
# ============================================================================

# Video streaming settings
VIDEO_QUALITY_LEVELS="480p,720p,1080p,4K"
VIDEO_DEFAULT_QUALITY="1080p"
VIDEO_ADAPTIVE_STREAMING="true"

# Content delivery
CONTENT_CACHE_TTL=3600  # 1 hour
STATIC_CACHE_TTL=86400  # 24 hours

# ============================================================================
# BACKUP AND MAINTENANCE
# ============================================================================

# Database backup configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# Maintenance mode
MAINTENANCE_MODE="false"
MAINTENANCE_MESSAGE="We're performing scheduled maintenance. Please check back soon!"

# ============================================================================
# LOCALIZATION
# ============================================================================

# Default locale and supported locales
DEFAULT_LOCALE="en-US"
SUPPORTED_LOCALES="en-US,en-CA"

# Currency and formatting
DEFAULT_CURRENCY="USD"
CURRENCY_DISPLAY_FORMAT="symbol"  # symbol, code, name

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================

# Image optimization
NEXT_PUBLIC_IMAGE_QUALITY=85
NEXT_PUBLIC_IMAGE_FORMATS="avif,webp"

# Caching strategies
CACHE_STRATEGY="stale-while-revalidate"
API_CACHE_TTL=300  # 5 minutes

# Bundle optimization
ANALYZE_BUNDLE="false"
COMPRESS_OUTPUT="true"

# ============================================================================
# TESTING CONFIGURATION
# ============================================================================

# Test database
TEST_DATABASE_URL="postgresql://postgres:password@localhost:5432/twophase_education_test"

# E2E testing
PLAYWRIGHT_HEADLESS="true"
PLAYWRIGHT_BROWSER="chromium"

# Load testing
LOAD_TEST_BASE_URL="http://localhost:3000"
LOAD_TEST_DURATION="60s"
LOAD_TEST_VUS=10  # Virtual users