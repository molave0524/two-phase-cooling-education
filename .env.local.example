# Two-Phase Cooling Education Center - Local Development Environment
# Copy this file to .env.local for development

# ============================================================================
# DEMO/DEVELOPMENT SETTINGS
# ============================================================================

# Demo mode - enables sample data and mock services
NEXT_PUBLIC_DEMO_MODE="true"

# Application URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ============================================================================
# OPTIONAL: DATABASE (for full functionality)
# ============================================================================

# Uncomment and configure for database features
# DATABASE_URL="postgresql://user:password@localhost:5432/twophase_education"

# ============================================================================
# OPTIONAL: AI ASSISTANT (for full AI functionality)
# ============================================================================

# Uncomment and add your OpenAI API key for full AI assistant
# OPENAI_API_KEY="sk-your-openai-api-key-here"

# AI Circuit Breaker settings
AI_CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
AI_CIRCUIT_BREAKER_TIMEOUT_MS=30000
AI_CIRCUIT_BREAKER_RESET_TIMEOUT_MS=60000

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable/disable features for demo
NEXT_PUBLIC_ENABLE_AI_ASSISTANT="true"
NEXT_PUBLIC_ENABLE_ECOMMERCE="true"
NEXT_PUBLIC_ENABLE_ANALYTICS="false"
NEXT_PUBLIC_ENABLE_VIDEO_STREAMING="true"

# Demo content settings
NEXT_PUBLIC_USE_SAMPLE_DATA="true"
NEXT_PUBLIC_ENABLE_DEMO_VIDEOS="true"

# ============================================================================
# MONITORING (optional)
# ============================================================================

NEXT_PUBLIC_ENABLE_MONITORING="false"